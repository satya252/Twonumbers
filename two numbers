class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        bringOver = 0
        val = 0
        curr = dummy = ListNode()
        while l1 or l2:
            if l1 and l2:
                val = l1.val + l2.val + bringOver
                l1 = l1.next
                l2 = l2.next
            elif l1:
                val = l1.val + bringOver
                l1 = l1.next
            else:
                val = l2.val + bringOver
                l2 = l2.next
            bringOver = 0
            if val > 9:
                bringOver = 1
                val = val % 10
            curr.next = ListNode(val)
            curr = curr.next
            
        if bringOver:
            curr.next = ListNode(bringOver)
        return dummy.next
